pipeline{
    agent any
      triggers {
            pollSCM('H/1 * * * *')
        }

    stages{
        stage('Cleaning Stage') {
            steps {
               bat 'mvn clean'
            }
        }
        stage('Testing stage') {
            steps {
                 bat 'mvn test'
            }
        }
        stage('Package stage') {
            steps {
                bat 'mvn package'
            }
        }
     }

}
